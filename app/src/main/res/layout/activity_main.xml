<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.group69.alarm.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Notification"
        android:id="@+id/showNotificationBut"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="showNotification"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Notification"
        android:id="@+id/stopNotificationBut"
        android:layout_below="@+id/showNotificationBut"
        android:layout_alignParentStart="true"
        android:onClick="stopNotification"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alert in 5 Seconds"
        android:id="@+id/alertButton"
        android:layout_below="@+id/stopNotificationBut"
        android:layout_alignParentStart="true"
        android:onClick="setAlarm" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The DB saves me"
        android:id="@+id/experiButton"
        android:layout_below="@+id/alertButton"
        android:layout_alignParentStart="true"
        android:onClick="experiMent"
        android:enabled="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add stock"
        android:id="@+id/addstockButton"
        android:layout_below="@+id/experiButton"
        android:layout_alignParentStart="true"
        android:onClick="addstock"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show stocks"
        android:id="@+id/showstockButton"
        android:layout_below="@+id/addstockButton"
        android:layout_alignParentStart="true"
        android:onClick="showstocks"/>
    <Button
        android:id="@+id/hotStocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/showstockButton"
        android:onClick="openHot"
        android:text="Hot Stocks" />

</RelativeLayout>