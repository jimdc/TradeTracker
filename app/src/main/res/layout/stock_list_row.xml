<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imgEditStock"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/edit"
        android:src="@drawable/ic_mode_edit" />

    <ToggleButton
        android:id="@+id/stockCrypto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="-5dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawableStart="@drawable/stock_or_crypto"
        android:background="@null"
        android:textOff=""
        android:textOn=""
        android:enabled="false"
        android:button="@null"
        style="@android:style/Widget.Holo.Button.Borderless"/>


<!--    <ImageView
        android:id="@+id/cryptoLogo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/edit"
        android:src="@drawable/crypto" />  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/imgEditStock"
        android:layout_toEndOf="@id/stockCrypto"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="21dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/txtComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text=""/>
    </LinearLayout>
</RelativeLayout>