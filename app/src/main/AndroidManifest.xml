<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.advent.tradetracker">

    <!-- Permission to use AlarmManager -->
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:icon="@drawable/tradetracker"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:supportsRtl="true">
        <activity
            android:name="com.advent.tradetracker.viewmodel.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.advent.tradetracker.view.MorePowerInfoNotification"
            android:label="@string/moar"
            android:parentActivityName="com.advent.tradetracker.viewmodel.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.advent.tradetracker.viewmodel.MainActivity" />
        </activity>
        <receiver android:name="com.advent.tradetracker.view.PriceAlertBroadcastReceiver" />

        <activity
            android:name="com.advent.tradetracker.viewmodel.AddEditStockActivity"
            android:windowSoftInputMode="stateVisible"
            android:label="@string/title_activity_add_stock"
            android:parentActivityName="com.advent.tradetracker.viewmodel.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.advent.tradetracker.viewmodel.MainActivity" />
        </activity>
        <activity
            android:name="com.advent.tradetracker.viewmodel.AddTrailingActivity"
            android:windowSoftInputMode="stateVisible"
            android:label="@string/title_activity_add_stock"
            android:parentActivityName="com.advent.tradetracker.viewmodel.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.advent.tradetracker.viewmodel.MainActivity" />
        </activity>
        <service android:name="com.advent.tradetracker.NetworkService" android:exported="false"/>
        <activity android:name="com.advent.tradetracker.SettingsActivity" android:label="@string/settings"
            android:parentActivityName=".viewmodel.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".viewmodel.MainActivity"/>
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="e4e65d494a84c6e0cb25c34f71e5fcf967921da4" />
    </application>

</manifest>