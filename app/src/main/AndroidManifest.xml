<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.group69.alarm" >

    <!-- Permission to use AlarmManager -->
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <!-- Permission to Send SMS -->
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.group69.alarm.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.group69.alarm.MoreInfoNotification"
            android:label="@string/moar"
            android:parentActivityName="com.example.group69.alarm.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.group69.alarm.MainActivity"/>
        </activity>
        <activity android:name="com.example.group69.alarm.HotStockActivity"
            android:label="@string/hotstock"
            android:parentActivityName="com.example.group69.alarm.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.group69.alarm.MainActivity"/>
        </activity>

        <receiver android:name="com.example.group69.alarm.AlertReceiver"/>
    </application>

</manifest>